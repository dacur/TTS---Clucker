!!!
%html
	%head
		%title Clucker
		= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/moment.min.js"
		= javascript_include_tag "http://code.jquery.com/jquery-2.1.0.min.js"
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Pompiere'
		= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto:400,300'
		= csrf_meta_tags

	%body
		%input(type="hidden" id="hdnID" value="#{session[:user_id]}")
		#overlay
		#error
		#success
		- if flash[:notice]
			.success #{flash[:notice]}

		#header
			#logo
				= link_to(image_tag("chicken-256.png", :alt=>"Clucker!", :height=>"36", :width=>"36") + "Clucker", "/")

			#menu
				= link_to "About", "/main/about"
				= link_to "Team", "/main/team"
				= link_to "Contact", "/main/contact"
				%button#btnShowLogin Login
				
				%form#logoutForm(action="/api/logout")
					%button#btnLogout Logout

		#page
			= yield
